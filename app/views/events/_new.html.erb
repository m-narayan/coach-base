<%= form_for @event || Event.new(:owner_id => profile_or_current_subject.actor_id, :interval => 1), :remote => true ,:validate => true do |f| %>
  <%= f.hidden_field :owner_id  %>
  <%= f.hidden_field :start_at %>
  <%= f.hidden_field :end_at %>
  <%= f.hidden_field :all_day %>

  <% if f.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(f.object.errors.count, "error") %> evitaron que se guardara esta actividad:</h2>

      <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <section>
      <%= f.label :Course %>
      <% courses_array = Course.all.map { |course| [course.title, course.id] } %>
      <%= f.select(:course_id,options_for_select(courses_array))%>
    </section>

    <%= render :partial => 'scheduler/form',
               :locals  => { :f => f } %>

    <%= f.submit nil %>
<% end %>

<script type="text/javascript">
    $('#calendar_form').on('shown', function () {
        $(ClientSideValidations.selectors.forms).validate();
    });
</script>