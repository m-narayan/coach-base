<div id="toolbar" class="toolbar-profile">
<div class="logo_home">
  <%= link_to (image_tag(current_subject.logo.url(:medium) , :size => "small", :alt => current_subject.name )), current_subject  %>
</div>
<h5>
  <%= link_to truncate_name(current_subject.name, :length => 80), current_subject %>
</h5>
<nav class="toolbar_menu">
  <ul class="nav">
    <% if current_user.actor.user_type =="coach" %>
        <li><%= link_to "Add Course" ,new_course_path %>    </li>
        <li><%= link_to "Manage Course" ,courses_path %></li>
    <% end  %>
    <li><%= link_to "All Courses" ,root_path %>    </li>
    <% if current_user.actor.user_type =="coach" %>
        <li><%= link_to "My Events" ,my_courses_path %> </li>
    <% end  %>
    <% if current_user.actor.user_type =="student" %>
        <li><%= link_to "My Courses" ,enrolled_courses_path %></li>
    <% end  %>



  </ul>
</nav>
</div>