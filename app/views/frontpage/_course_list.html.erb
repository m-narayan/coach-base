<div class="container">
  <h3 style="text-align: center">Upcoming Courses</h3>
<div class="row">
  <% @events.each do |event|  %>
  <div class="span4">
       <div class="tile_list_tile tile_list_tile_4">
        <div id="tile_nid_4107" class="tile tile_mid tile_even">
          <a href="">
            <% if event.poster.file_file_name.nil? %>
                <%= image_tag("plain.jpg", :style=>"width:310px;height:175px;")%>
            <%else%>
                <%= image_tag(event.poster.file, :style=>"width:310px;height:175px;")%>
            <%end%>
            <div class="tile_info" style="padding-bottom: 0px;">
            <div class="tile_title left">
              <%= event.activity_object.title%>	</div>
            <div class="tile_instructors left">
              <%= event.author.name %></div>
            <div class="clear"></div>
            <div class="button_green_small tile_action">
              <p class="left"><span>live</span> <%= event.start_date.strftime("%b %d") %></p>
              <span class=" icon-arrow-right icon-white tile_action_icon"></span>
            </div>
            <!--<div class="tile_ttl">-->
              <!--<div class="ttl_live_in">LIVE in</div><div class="ttl_live_duration">&nbsp;5 days</div>			</div>-->
            <div class="tile_sell_price hide"><%= event.price %></div>
          </div>
          </a>
        </div>
      </div>

  </div>

  <% end  %>
</div>
</div>