<div class="container">
  <h3 style="text-align: center">Upcoming Courses</h3>
<div class="row">
  <% @courses.each do |course|  %>
  <div class="span4">
       <div class="tile_list_tile tile_list_tile_4">
         <a href=""> <div id="tile_nid_4107" class="tile tile_mid tile_even">
          <%=link_to image_tag(course.course_image.url, :style=>"width:310px;height:175px;") ,course_course_profile_path(course) %>
          <%= link_to course_course_profile_path(course) do %>  <div class="tile_info" style="padding-bottom: 0px;">
            <div class="tile_title left">
              <%= course.activity_object.title%>	</div>
            <div class="tile_instructors left">
              <%= course.user.name %></div>
            <div class="clear"></div>
           <%end%>
            <div class="tile_sell_price hide"><%=  %></div>
          </div>
        </div>
         </a>
      </div>

  </div>

  <% end  %>
</div>
</div>