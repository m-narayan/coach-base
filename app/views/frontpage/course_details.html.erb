
<div class="container">
  <div class="row">
    <div class="span4" style="text-align: right;">
      <h3> <%= @event.activity_object.title%></h3>
       <p> <%= @event.activity_object.description%></p>
      <p>Instructor: <%=link_to @event.author.name, user_path(@event.author) %></p>
      <p class="event_price">$<%= @event.price.round %> <%= link_to "Enroll", payment_confirm_path(id:@event.id) , :class=>"btn btn-primary"%></p>

    </div>
    <div class="span7">
      <% if @event.poster.file_file_name.nil? %>
          <%= image_tag("plain.jpg", :style=>"width:640px;height:360px;")%>
      <%else%>
          <%=image_tag(@event.poster.file, :style=>"width:640px;height:360px;") %>
      <%end%>
    </div>
  </div>
</div>
<br>
<section>
</section>