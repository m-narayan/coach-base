<section id="home">

<%= render partial: 'toolbar/subject' %>

<div class="span8">
  <h3>Manage courses</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Image</th>
      <th>Course</th>
         <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td>

        <%= image_tag course.course_image.url unless course.course_image.nil? %>   </td>
      <td><%= course.activity_object.title %></td>
                                  <td>   <%= link_to edit_course_path(course) do %><i class="icon-pencil"></i><% end %>
         <%= link_to course, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="icon-remove"></i>  <% end %>
      </td>
         </tr>
        <%end%>
    </tbody>
  </table>

  <ul class="pagination pagination-large">
  <%#= will_paginate @courses, :container=>false %>
 </ul>

</div>

  <% if current_user.user_type =="coach" %>
      <%= render partial: 'sidebar/show' %>
  <% end  %>

  </section>